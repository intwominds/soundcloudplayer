<div id="accounts_new_page">
  <div id="accounts_new_page_container">

    <div id="outer_form_accounts">
      <div id="form_accounts">
        <%= form_for @account do |f| %>
          <p>
            <%= f.text_field :username, :placeholder => 'Username', :autofocus => true %>
          </p>
          <p>
            <% text_field_tag 'email', :placeholder => 'Email' %>
          </p>
          <p>
            <%= f.password_field :password, :placeholder => 'Password' %>
          </p>
          <p>
            <%= f.password_field :password_confirmation, :placeholder => 'Confirm password' %>
          </p>
          <p><%= f.submit %></p>
        <% end %>
      </div>
    </div>

    <div id="errors_accounts">
      <% if @account.errors.any? %>
        <ul>
          <% @account.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
